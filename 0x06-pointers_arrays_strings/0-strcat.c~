#include "main.h"
/**
 * *_strncat - a function that concatenates two strings
 * @dest: input
 * @src: input
 */

char *_strcat(char *dest, char *src)
{
	int sum_1 = 0, sum_2 = 0, i, j, n1, n2;
	char *arr;
    for (i=0; dest[i] != '\0'; i++)
    {
        sum_1++;
    }
     for (i=0; src[i] != '\0'; i++)
    {
        sum_2++;
    }
    n1 = sum_1 - 1, n2 = sum_2 - 1;
    for (i=0; i < n1; i++)
    {
        if (arr[i] == '\0'){
            for (j = 0; j < n2; j++)
            arr[i] = src[j];
        }
        else
            arr[i] = dest[i];
    }

    return (dest);
}
